# CodePush Server - Production Environment (Public HTTPS with ALB)
# Production-ready configuration with security best practices

# Environment Configuration
NODE_ENV=production
BASE_URL=
LOGGING=false
ENABLE_PACKAGE_DIFFING=true
ENABLE_ACCOUNT_REGISTRATION=false

# AWS S3 Configuration (IAM role provides access automatically)
AWS_BUCKET_NAME=crabi-prod-code-push-server
AWS_REGION=us-east-1

# Authentication (REQUIRED for production - OAuth only, no debug mode)
DEBUG_DISABLE_AUTH=false
DEBUG_USER_ID=

# AWS Redis Configuration (production Redis cluster)
REDIS_HOST=cache.9eczd4.0001.use1.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=1
REDIS_TLS_DISABLED=true

# GitHub OAuth (REQUIRED for production authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Server Configuration
PORT=3000
CODE_PUSH_SERVER_URL=https://codepush.prod.crabi.net
