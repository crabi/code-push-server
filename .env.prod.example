# CodePush Server - Production Environment (Private EC2 with IAM Role)
# No AWS keys needed - EC2 instance uses IAM role for S3 access

# Environment Configuration
NODE_ENV=production
BASE_URL=http://codepush.prod.crabi.net:3000
LOGGING=false
ENABLE_PACKAGE_DIFFING=true
ENABLE_ACCOUNT_REGISTRATION=false

# AWS S3 Configuration (IAM role provides access automatically)
AWS_BUCKET_NAME=crabi-prod-code-push-server
AWS_REGION=us-east-1

# Authentication (REQUIRED for production - OAuth only, no debug mode)
DEBUG_DISABLE_AUTH=false
DEBUG_USER_ID=

# AWS Redis Configuration (existing production Redis cluster)
REDIS_HOST=cache.redis.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=0

# GitHub OAuth (REQUIRED for production authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Server Configuration
PORT=3000
